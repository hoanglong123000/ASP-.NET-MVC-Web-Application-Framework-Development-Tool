@using Web.Student.Models 
@using Service.AuthSharing.Components
@model  Web.Student.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Web/Layouts/Signin.cshtml";
    var baseData = ViewData["BaseData"] as BaseData;
    var bg = baseData.LocalSettings.GetValue("general", "logo_web");
}

<!-- Page container -->
<div class="page-container" style="">

    <!-- Page content -->
    <div class="page-content" style="">

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Content area -->
            <div class="content" style="margin-top: 40px;">
                
                <!-- Simple login form -->
                @using (Html.BeginForm("login", "employee", 
                    new {ReturnUrl = Model.ReturnUrl}, FormMethod.Post, new {@class = "", role = "form"}))
                {
                    @Html.AntiForgeryToken()

                    <div class="panel panel-body login-form">
                        <div class="text-center mb-15"> 
                            <img src="~/assets/file/logo_ii.png" style="width: 200px" />
                        </div>
                        <h4 class="text-center text-bold">QUẢN LÝ</h4>
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger no-border">@TempData["Message"]</div>
                        }
                        <div class="form-group has-feedback has-feedback-left form-group-lg"">
                            @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
                            @Html.ValidationMessageFor(m => m.LoginName, "", new { @class = "text-danger" })
                            <div class="form-control-feedback">
                                <i class="icon-user text-muted"></i> 
                            </div>
                        </div>
                        <div class="form-group has-feedback has-feedback-left form-group-lg"">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <div class="form-control-feedback">
                                <i class="icon-lock2 text-muted"></i>
                            </div>
                        </div>
                        @*<div class="form-group has-feedback has-feedback-left">
                            <input type="email" value="@Model.Email" name="email" class="form-control" placeholder="Email">
                            <div class="form-control-feedback">
                                <i class="icon-user text-muted"></i>
                            </div>
                        </div>

                        <div class="form-group has-feedback has-feedback-left">
                            <input type="password" class="form-control" placeholder="Password" required="">
                            <div class="form-control-feedback">
                                <i class="icon-lock2 text-muted"></i>
                            </div>
                        </div>*@

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                Đăng nhập <i class="icon-circle-right2 position-right"></i>
                            </button>
                        </div>

                        @*<div class="text-center">
                            <a href="/employee/forgotpassword">Quên mật khẩu?</a>
                        </div>*@
                    </div>
                }
                <!-- /simple login form -->

            </div>
            <!-- /content area -->

        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->
