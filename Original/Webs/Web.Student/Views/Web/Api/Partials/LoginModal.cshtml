@using  Web.Student.Models 
@model LoginViewModel
@{
    var baseData = ViewData["BaseData"] as BaseData; 
}
<!-- Modal -->
<div class="modal fade" id="login_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document" style="max-width: 340px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="top: 6px">
                    <i class="icon-x"></i>
                </button>
            </div>
            <div class="modal-body no-padding">
                <div class="panel panel-body login-form no-border no-margin">
                    <form action="@("/auth/login?ru=")" method="POST" role="form">
                        <input type="hidden" name="ru" value="" />
                        <div class="" style="text-align: center">
                            <h3 class="no-margin-top">
                                <i class="icon-shield-check position-left text-primary"></i>Đăng nhập
                            </h3>
                            <h5 class="content-group" style="font-size: 15px;">
                                <small class="display-block">Sử dụng tài khoản Spress</small>
                            </h5>
                        </div>
                        <div class="form-group has-feedback has-feedback-left">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập email" })
                            <div class="form-control-feedback">
                                <i class="icon-user text-muted"></i>
                            </div>
                        </div>

                        <div class="form-group has-feedback has-feedback-left">
                            <input type="password" class="form-control" name="password" placeholder="Mật khẩu">
                            <div class="form-control-feedback">
                                <i class="icon-lock2 text-muted"></i>
                            </div>
                        </div>

                        <div class="form-group login-options">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="checkbox-inline">
                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "styled" })
                                        Nhớ mật khẩu
                                    </label>
                                </div>

                                <div class="col-sm-6 text-right">
                                    <a href="/auth/forgotpassword">Quên mật khẩu?</a>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn bg-blue btn-block">Đăng nhập <i class="icon-arrow-right14 position-right"></i></button>
                        </div>
                    </form>
                    <div class="content-divider text-muted form-group"><span>hoặc đăng nhập bằng tài khoản</span></div>
                    <form action="@( "/auth/ExternalLogin?ru=")" method="POST" role="form">
                        <ul class="list-inline form-group list-inline-condensed text-center" id="socialLoginList">

                            <li>
                                <button id="Facebook"
                                        class="btn bg-primary-700 btn-sm btn-labeled btn-rounded"
                                        type="submit"
                                        name="provider"
                                        value="Facebook"
                                        title="Đăng nhập bằng tài khoản Facebook của bạn">
                                    <b><i class="icon-facebook"></i></b>
                                    Facebook
                                </button>
                            </li>
                            <li>
                                <button id="Google" class="btn bg-danger-600 btn-sm btn-labeled btn-rounded"
                                        type="submit"
                                        name="provider"
                                        value="Google"
                                        title="Đăng nhập bằng tài khoản google của bạn">
                                    <b><i class="icon-google-plus"></i></b>
                                    Google
                                </button>
                            </li>
                        </ul>
                    </form>
                    <div class="content-divider text-muted form-group"><span>Bạn chưa có tài khoản?</span></div>
                    <a href="@("/auth/register?ru=" + ViewBag.Ru)" class="btn btn-default btn-block content-group no-margin">Đăng ký</a>
                    @*<span class="help-block text-center no-margin">
                            Bằng việc tiếp tục đăng nhập, chúng tôi hiểu rằng bạn đã và đồng ý các điều khoản
                            <a href="/thong-tin/chinh-sach-bao-mat" target="_blank">điều khoản và chính sách bảo mật của chúng tôi</a>.
                        </span>*@
                    <p class="text-muted mt-15" style="font-size: 12px">Một tài khoản Spress ID để truy cập tất cả sản phẩm của Spress.</p>
                    <div class="row row-seamless btn-block-group">
                        <div class="col-xs-3"></div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

